<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/smooth_border_background"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iconSearch"
        android:layout_width="@dimen/iconH"
        android:layout_height="@dimen/iconH"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/p_1"
        android:layout_marginRight="@dimen/p_1"
        android:src="@drawable/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="@dimen/textH"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:hint="Find for food or restaurant"
        android:inputType="text"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconSearch"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>